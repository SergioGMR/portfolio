---
import type { HTMLAttributes } from 'astro/types'
import { cn } from '@/lib/utils'
import { badgeVariants, type BadgeVariantProps } from './variants'

interface Props extends HTMLAttributes<'div'>, BadgeVariantProps {}

const { variant, class: className, ...attributes } = Astro.props as Props
---

<div class={cn(badgeVariants({ variant }), className)} {...attributes}>
  <slot />
</div>
